title-outline-color = black
contents-outline-color = rgba(136,223,245,1)
card-body-outline-color = #343a40

h1
  text-shadow:
    -1px -1px 0 title-outline-color,
    1px -1px 0 title-outline-color,
    -1px 1px 0 title-outline-color,
    1px 1px 0 title-outline-color;

.app
  position: absolute
  top: 50%
  transform: translateY(-50%)
  width: 100%

.contents
  border-radius 5px
  box-shadow: 0 0 10px 5px contents-outline-color
  display flex
  justify-content: space-around
  height:50%
  padding: 30px 15px

.card
  width:400px

.contents .card-img-top
  margin: 0 auto
  width: 200px

.contents .card-body
  border: solid 1px card-body-outline-color
  border-radius 7px
  margin: 15px
  padding: 6px 7px

.card-body textarea
  border: none
  resize: none
  height: 100%
  min-height: 400px
  overflow-y: auto
  width: 100%